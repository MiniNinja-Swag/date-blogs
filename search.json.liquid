{%- assign items = site.dates | sort: 'date' | reverse -%}
[
{%- for d in items -%}
  {
    "url": {{ d.url | relative_url | jsonify }},
    "title": {{ d.title | default: d.slug | jsonify }},
    "date": {{ d.date | date_to_xmlschema | jsonify }},
    "location": {{ d.location | default: "" | jsonify }},
    "tags": {{ d.tags | default: [] | jsonify }},
    "body": {{ d.content | strip_html | replace: "\n", " " | replace: "\r", " " | replace: "\t"," " | jsonify }}
  }{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
